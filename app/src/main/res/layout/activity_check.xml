<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_marginTop="40dip"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_logo2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:layout_marginLeft="10dip"
                android:text="全制测试"/>
        </LinearLayout>
        <TextView
            android:id="@+id/check_state"
            android:gravity="center"
            android:text="暂无连接"
            android:layout_marginTop="45dip"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="35dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/check_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_edit"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginRight="8dip"
                android:text="扫码连接"/>
            <Button
                android:id="@+id/check_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_edit"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginLeft="8dip"
                android:text="扫描连接"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="200dip"
                android:layout_height="0.5dip"
                android:background="@android:color/white"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dip">
                <TextView
                    android:text="1/ 信号测试"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/rssi_result"
                    android:src="@mipmap/ic_state1"
                    android:layout_marginLeft="30dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="200dip"
                android:layout_height="0.5dip"
                android:background="@android:color/white"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dip">
                <TextView
                    android:text="2/ 按键测试"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/command_result"
                    android:src="@mipmap/ic_state1"
                    android:layout_marginLeft="30dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="200dip"
                android:layout_height="0.5dip"
                android:background="@android:color/white"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dip">
                <TextView
                    android:text="3/ 老化测试"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/battery_result"
                    android:src="@mipmap/ic_state1"
                    android:layout_marginLeft="30dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="200dip"
                android:layout_height="0.5dip"
                android:background="@android:color/white"></View>
        </LinearLayout>
        <Button
            android:id="@+id/save_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:text="保存结果"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_botton_white"/>
    </LinearLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/check_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
</RelativeLayout>
